<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    tools:context=".DeleteProfileSheetFragment">


    <TextView
        android:id="@+id/deleteProfileTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:text="Delete profile?"
        android:textAllCaps="false"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/confirmDeleteProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:ems="10"
        android:padding="5dp"
        android:text="Are you sure you want to delete the profile?"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmDeleteProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/design_default_color_error"
        android:elevation="4dp"
        android:text="Yes! Delete profile!"
        android:textAllCaps="false"
        android:textSize="18sp" />

</LinearLayout>