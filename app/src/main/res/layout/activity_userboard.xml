<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Userboard.UserboardActivity">

    <!-- Search EditText with a bit more top margin -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFFEFE"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:hint="Search Users"
        android:inputType="text"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <!-- User and Password Titles with slightly reduced height and margin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00A5C9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleuser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="User:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titlepassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Password:"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- No Users Text -->
    <TextView
        android:id="@+id/noUsersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="There are no users available or found in the database. Please restart the application."
        android:textSize="20sp"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/UserBoardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:backgroundTint="@color/design_default_color_background" />

    <!-- Back and New User Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/newUserBackButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:backgroundTint="#D458F8"
            android:text="Back"
            android:textColor="?colorOnPrimary"
            app:iconTint="?colorOnPrimary" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/newUserButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="New User"
            android:textColor="?colorOnPrimary"
            app:iconTint="?colorOnPrimary" />
    </LinearLayout>
</LinearLayout>
