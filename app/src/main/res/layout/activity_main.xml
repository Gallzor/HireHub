<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Account Button -->
    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:background="#00FFFFFF"
        android:elevation="20dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_account_view"
        android:contentDescription="Account page Button" />

    <!-- FragmentContainerView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A5C9"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/browseProfilesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Profiles at Your Fingertips, Thanks to Hirehub"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.hirehub.MainProfileListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Menu Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- Homepage Button -->
        <ImageButton
            android:id="@+id/homepageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:elevation="10dp"
            android:padding="20dp"
            android:src="@drawable/ic_home_icon"
            android:textColor="#000000"
            android:contentDescription="Homepage Button" />

        <!-- User CRUD Button -->
        <ImageButton
            android:id="@+id/userCrudButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:elevation="20dp"
            android:padding="20dp"
            android:src="@drawable/ic_user_board"
            android:textColor="#000000"
            android:contentDescription="User CRUD Button" />

        <!-- Profile CRUD Button -->
        <ImageButton
            android:id="@+id/profileCrudButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:elevation="10dp"
            android:padding="20dp"
            android:src="@drawable/ic_profile_page"
            android:textColor="#000000"
            android:contentDescription="Profile CRUD Button" />
    </LinearLayout>
</LinearLayout>
