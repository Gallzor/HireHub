<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Account Button -->
    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:background="#00FFFFFF"
        android:padding="1dp"
        android:src="@drawable/ic_account_view"
        android:scaleType="fitCenter"/>

    <!-- FragmentContainerView -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.example.hirehub.MainProfileListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Menu Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="5dp">

        <!-- Homepage Button -->
        <ImageButton
            android:id="@+id/homepageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:padding="20dp"
            android:src="@drawable/ic_home_icon"
            android:textColor="#000000" />

        <!-- User CRUD Button -->
        <ImageButton
            android:id="@+id/userCrudButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:padding="20dp"
            android:src="@drawable/ic_user_board"
            android:textColor="#000000" />

        <!-- Profile CRUD Button -->
        <ImageButton
            android:id="@+id/profileCrudButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:padding="20dp"
            android:src="@drawable/ic_profile_page"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
