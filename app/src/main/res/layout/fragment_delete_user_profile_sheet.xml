<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/hirehub_purple"
    android:orientation="vertical"
    tools:context=".UserProfile.DeleteUserProfileSheetFragment">


    <TextView
        android:id="@+id/deleteUserProfileTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Delete profile?"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/confirmDeleteUserProfileText"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="Are you sure you want to delete your profile?" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmDeleteUserProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Yes! Delete my profile!"
        app:backgroundTint="@color/hirehub_purple" />

</LinearLayout>